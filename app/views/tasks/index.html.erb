<h1>My Tasks</h1>

<ul>
<% @tasks.each do |task| %>
  <li>
    <% if task.completed? %>
      <i class="fas fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to task [ 'title' ], task_path(task) %>
    <%= link_to task_delete_path(task), method: :delete do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
    <!-- icon needs link attached -->
  </li>
<% end %>
</ul>

<p><%= link_to "Add a new task", task_new_path %></p>


